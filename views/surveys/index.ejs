<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Surveys Management</title>
</head>
<body>

  <h2>Create New Survey</h2>
  <form action="/surveys" method="POST">
      <input type="text" name="title" placeholder="Survey Title" required>
      <textarea name="description" placeholder="Survey Description" required></textarea>
      <input type="hidden" name="userId" value="<%= user._id %>"> <!-- Ensure user ID is passed -->
      <button type="submit">Create Survey</button>
  </form>
  
    <h1>All Surveys</h1>
    <ul>
        <% surveys.forEach(function(survey) { %>
            <li>
                <strong><%= survey.title %></strong> 
                (<%= survey.description %>) 
                <a href="/surveys/<%= survey._id %>">View</a> 
            </li>
        <% }); %>
    </ul>

</body>
</html>
